<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0" metadata-complete="true">

	
	<servlet>
		<servlet-name>accountController</servlet-name>
		<servlet-class>web.controllers.AccountController</servlet-class>
	</servlet>
		<servlet>
		<servlet-name>registrationController</servlet-name>
		<servlet-class>web.controllers.RegistrationController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>secretController</servlet-name>
		<servlet-class>web.controllers.SecretController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>accountController</servlet-name>
		<url-pattern>/account</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>registrationController</servlet-name>
		<url-pattern>/reg</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>secretController</servlet-name>
		<url-pattern>/secret</url-pattern>
	</servlet-mapping>
	
	<filter>
	  <filter-name>filterAuthorization</filter-name>
	  <filter-class>web.filters.FilterAuthorization</filter-class>
	</filter>
	
	<filter-mapping>
	  <filter-name>filterAuthorization</filter-name>
	  <servlet-name>secretController</servlet-name>
	</filter-mapping>
	
	<filter>
	  <filter-name>filterReg</filter-name>
	  <filter-class>web.filters.FilterReg</filter-class>
	</filter>
	
	<filter-mapping>
	  <filter-name>filterReg</filter-name>
	  <servlet-name>registrationController</servlet-name>
	</filter-mapping>

</web-app>
